{
  "env": {
    "dev": {
      "presets": [
        "es2015",
        "stage-0",
        "react"
      ],
      "plugins": [
        "react-hot-loader/babel"
        // ���� React �����ģ�����滻(HMR)
      ]
    },
    "test": {
      "presets": [
        "es2015",
        "stage-0",
        "react"
      ],
      "plugins": [
        "transform-runtime",
        [
          "istanbul",
          {
            "exclude": [
              "**/test/*.js"
            ]
          }
        ]
      ],
      "comments": false
    }
  }
}